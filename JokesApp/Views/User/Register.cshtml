@model Int32

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - JokesApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/JokesApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" 
                           asp-route-id=@($"{Model}")>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Joke" asp-action="Index" 
                           asp-route-id=@($"{Model}")>Jokes</a>
                    </li>
                    @if (Model == 0)
                    {
                        <li class="'nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login"
                               asp-route-id=@($"{Model}")>Log In</a>
                        </li>
                        <li class="'nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register"
                               asp-route-id=@($"{Model}")>Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="'nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Exit"
                               asp-route-id=@($"{Model}")>Exit</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    
    <form asp-action="RegisterNewUser">
        <label>Login</label>
        <input name="login" type="text"/>
        <br/>
        <label>Password</label>
        <input name="password" type="password"/>
        <br/><br/>
        <input type="submit" value="Register"/>
    </form>
    
</div>

</body>
</html>